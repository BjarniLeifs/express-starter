<% layout('layout') -%>

<div class="custom-container" ng-controller="UserForgetPswCtrl">
	<div class="page-header">
		<h3>Forgot Password</h3>
	</div>
	<form novalidate method="POST" action="/forgot" name="forgotForm">
    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
    <div class="form-group">
      <p>Enter your email address below and we will send you password reset instructions.</p>
      <label for="email" class="control-label">Email</label>
      <input type="email" name="email" id="email" placeholder="Email" autofocus="autofocus" class="form-control" required ng-model="email"/>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" ng-disabled="forgotForm.$invalid || !email">
	      <i class="fa fa-key"></i>Reset Password
      </button>
    </div>
  </form>
</div>